<configs>
	<append xpath="/windows/window[@name='HUDLeftStatBars']">
		<rect name="wellnessBars" pos="185,156" rows="2" cols="1" side="right">
			<!-- Water Bar -->
			<rect width="171" height="46" pos="0,-50" controller="HUDStatBar" stat_type="Water" visible="{statvisible}">
				<sprite depth="1" name="border" color="0,0,0,128" type="sliced" />
				<sprite depth="2" name="background" color="0,0,0,140" type="sliced" />
				<filledsprite depth="3" name="background" color="0,0,128,192" width="169" type="filled" fill="{statmodifiedmax}" />
				<filledsprite depth="5" name="BarContent" color="0,0,128,192" width="169" type="filled" fill="0" />
				<sprite depth="6" name="Icon" atlas="{staticonatlas|once}" sprite="{staticon|once}" size="35,35" pos="8,-6" foregroundlayer="true" />
				<label depth="7" name="TextContent" pos="6,-8" font_size="32" color="[white]" justify="center" pivot="topleft" text="{statcurrent}%" height="35" />
				<sprite depth="8" name="border" color="0,0,0,255" type="sliced" fillcenter="false" />
			</rect>

			<!-- Food Bar -->
			<rect width="171" height="46" pos="0,-100" controller="PlayerStatsWindow" stat_type="Food" visible="{statvisible}">
				<sprite depth="1" name="border" color="0,0,0,128" type="sliced" />
				<sprite depth="2" name="background" color="0,0,0,140" type="sliced" />
				<filledsprite depth="3" name="background" color="0,128,0,192" width="169" type="filled" fill="{playerfoodfill}" />
				<filledsprite depth="5" name="BarContent" color="0,128,0,192" width="169" type="filled" fill="0" />
				<sprite depth="6" name="Icon" sprite="ui_game_symbol_hunger" size="35,35" pos="8,-6" foregroundlayer="true" />
				<label depth="7" name="TextContent" pos="6,-8" font_size="32" color="[white]" justify="center" pivot="topleft" text="{statcurrent}%" height="35" controller="HUDStatBar" />
				<sprite depth="8" name="border" color="0,0,0,255" type="sliced" fillcenter="false" />
			</rect>
		</rect>
	</append>
</configs>
