<configs>
	<set xpath="/windows/window[@name='HUDLeftStatBars']/rect[@name='hud' and @side='left']/@pos">90,159</set>
	<set xpath="/windows/window[@name='HUDLeftStatBars']/rect[@name='hud' and @side='right']/@pos">9,183</set>
	<set xpath="/windows/window[@name='HUDLeftStatBars']/rect[@name='hud' and @side='right']/rect[@stat_type='Stamina']/filledsprite[@depth='3' and @name='background' and @color='110,110,110,128']/@color">[JaWoodlePurple]</set>
	<set xpath="/windows/window[@name='HUDLeftStatBars']/rect[@name='hud' and @side='right']/rect[@stat_type='Stamina']/filledsprite[@depth='5' and @name='BarContent']/@color">[JaWoodlePurple]</set>

	<append xpath="/windows/window[@name='HUDLeftStatBars']">
		<rect name="wellnessBars" pos="9,33" rows="1" cols="1" side="right">
			<!-- Water Bar -->
			<rect width="84" height="23" pos="0,0" controller="HUDStatBar" stat_type="Water" visible="{statvisible}">
				<sprite depth="1" name="border" color="0,0,0,128" type="sliced" />
				<sprite depth="2" name="background" color="0,0,0,140" type="sliced" />
				<filledsprite depth="3" name="background" color="0,0,128,192" width="82" type="filled" fill="{statmodifiedmax}" />
				<filledsprite depth="5" name="BarContent" color="0,0,128,192" width="82" type="filled" fill="0" />
				<sprite depth="6" name="Icon" atlas="{staticonatlas|once}" sprite="{staticon|once}" size="16,16" pos="3,-3" foregroundlayer="true" />
				<label depth="7" name="TextContent" pos="3,-3" font_size="16" color="[white]" justify="center" pivot="topleft" text="{playerwater}" height="17" controller="PlayerStatsWindow" />
				<sprite depth="8" name="border" color="0,0,0,255" type="sliced" fillcenter="false" />
			</rect>

			<!-- Food Bar -->
			<rect width="84" height="23" pos="87,0" controller="PlayerStatsWindow" stat_type="Food" visible="{statvisible}">
				<sprite depth="1" name="border" color="0,0,0,128" type="sliced" />
				<sprite depth="2" name="background" color="0,0,0,140" type="sliced" />
				<filledsprite depth="3" name="background" color="0,128,0,192" width="82" type="filled" fill="{playerfoodfill}" />
				<filledsprite depth="5" name="BarContent" color="0,128,0,192" width="82" type="filled" fill="0" />
				<sprite depth="6" name="Icon" sprite="ui_game_symbol_hunger" size="16,16" pos="3,-3" foregroundlayer="true" />
				<label depth="7" name="TextContent" pos="3,-3" font_size="16" color="[white]" justify="center" pivot="topleft" text="{playerfood}" height="35" />
				<sprite depth="8" name="border" color="0,0,0,255" type="sliced" fillcenter="false" />
			</rect>
		</rect>
	</append>
</configs>
